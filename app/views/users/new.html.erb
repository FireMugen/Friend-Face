<h4 class="sign-up-wrap">What is Friend Face? <br> It's Reynholm Industries very own social networking site!</h4>

<h1>Sign Up</h1>
<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ol>
<% end %>
<div class="edit-form">
<%= form_for @user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name, :required => true %>
  <%= f.label :email %>
  <%= f.email_field :email, :required => true %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up", :class => "sign-button" %>
	<p>
		Already have an account?
		<%= link_to " Log In", login_path %>
	</p>
<% end %>
</div>
