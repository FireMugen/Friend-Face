<h1>News Feed</h1>
<% if @posts.count != 0 %>
	<ul>
	<% @posts.each do |l| %>
		<li class="home-posts">
			<%= cl_image_tag(l.user.image, :class => 'home-thumb', :default_image => "Reynholmlogo_rc8igd.png") %>
			<span class="home-user"><%= link_to l.user.name, user_path(l.user.id) %></span>
				<br/>
				<span class="home-user-name"><%= l.content %></span>
				<%= link_to "Comment", post_path(l.id) %>
				<% if l.user_id == current_user.id %>
					<%= link_to "Delete", post_path(l.id), :method => 'delete' %>
				<% end %>
		</li>
	<% end %>
	</ul>
<% end %>
